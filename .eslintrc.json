{
  "extends": ["airbnb-base"],
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2024,
    "sourceType": "module"
  },
  "rules": {
    "no-param-reassign":"off",
    "camelcase": "off",
    "no-console": ["error", {"allow": ["error"]}],
    "import/prefer-default-export": "off",
    "consistent-return": "off",
    "class-methods-use-this": "off",
    "lines-between-class-members": "off",
    "import/extensions": ["error", "always", {
      "js": "always",
      "mjs": "always",
      "jsx": "always"
    }],
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_"
      }
    ],
    "max-len": [
      "error",
      {
        "ignoreStrings": true,
        "ignoreUrls": true,
        "ignoreTemplateLiterals": true,
        "ignoreRegExpLiterals": true,
        "ignoreComments": true,
        "code": 100
      }
    ]
  }
}
